@model IEnumerable<KutuphanePaneli.Models.TblYazar>

@{
    ViewData["Title"] = "Yazarlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-2 text-gray-800"> Yazarlar</h1>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"> <a asp-controller="Yazar" asp-action="YazarEkle" class="btn btn-info">Yeni Yazar Ekle</a></h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
             
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Ad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Soyad)
                            </th>
                            <th>

                            </th>
                            <th>

                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Soyad)
                                </td>
                                <td>
                                    @Html.ActionLink("Guncelle", "YazarGetir", "Yazar",
                                        new { id = item.Id },
                                        new { @class = "btn btn-success" })
                                </td>
                                <td>

                                    @Html.ActionLink("Sil", "YazarSil", "Yazar",
                                    new { id = item.Id },
                                    new { @class = "btn btn-danger" }

                                   )

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </table>

        </div>
    </div>
</div>